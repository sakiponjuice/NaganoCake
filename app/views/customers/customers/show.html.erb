<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <h3 class="text-center bg-light"><strong>マイページ</strong></h3>
    </div>
  </div>
  <div class="row make">
    <div class="col-5">
      <table class="table table-borderless">
        <tr>
          <td><h5><strong>登録情報</strong></h5></td>
          <td>
            <%= link_to "編集する", edit_customers_customer_path(@customer),class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
    <div class="row">
      <div class="col-9">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light tytle">氏名</th>
            <td><%= @customer.last_name  %> <%= @customer.first_name%></td>
          </tr>
          <tr>
            <th class="bg-light">カナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana%></td>
          </tr>
          <tr>
            <th class="bg-light">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="bg-light">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="bg-light">電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th class="bg-light">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      </div>
    </div>

    <div class="row">
      <div class="col-5">
        <table class="table table-borderless">
          <tr>
            <th><h5><strong>配送先</strong></h5></th>
            <td>
              <%= link_to "一覧を見る", customers_shippings_path,class: "btn btn-primary" %>
            </td>
          </tr>
          <tr>
            <th><h5><strong>注文履歴</strong></h5></th>
            <td>
              <%= link_to "一覧を見る", customers_orders_path,class: "btn btn-primary" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
</div>
