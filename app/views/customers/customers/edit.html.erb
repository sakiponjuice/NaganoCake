<div class="container mt-5">
  <div class ="row">
    <div class="col-md-5">
      <h3 class="text-center bg-light"><strong>登録情報編集</strong></h3>
    </div>
  </div>

  <div class ="row make">
    <%= form_for @customer , url:customers_customer_path(@customer.id),html: { class: "pt-4" } do |f| %>
      <div class="col-12">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>氏名</th>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"%></td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"%></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"%></td>
            </tr>
          </tbody>
        </table>
        <table class="table table-borderless">
          <tbody>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"62" %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email"%></td>
          </tr>
          </tbody>
        </table>
        <table class="table table-borderless text-center">
          <tr>
            <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
            <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger mx-5" %></td>
          </tr>
          </tbody>
        </table>
      </div>
      <% end %>
  </div>
</div>