<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <h3 class="text-center bg-light"><strong>配送先編集</strong></h3>
    </div>
  </div>

  <div class="row make">
    <%= form_for @shipping, url: customers_shipping_path(@shipping.id), method: :patch, html: { class: "pt-4" } do |f| %>
      <div class="col-12">
        <table class="table table-borderless">
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><%= f.submit "編集を保存する", class:"btn btn-success" %></td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>