<div class="container">
  <div class="row">
    <div class="col-4">
      <h3 class="bg-light m-5"><strong>商品編集</strong></h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
        <%= form_with model: @product, url: admins_product_path, local: true do |f| %>
        <div class="form-group">
          <label>商品画像</label>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :item_introduction, '商品説明' %>
          <%= f.text_field :introduction, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %>
        </div>
        <div class="form-group">
          <%= f.label :price, "価格" %>
          <%= f.text_field :price, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>
        <div class="form-group text-center">
          <%= f.submit '変更を保存',class: 'btn btn-success' %>
        </div>
        <% end %>
    </div>
  </div>
</div>