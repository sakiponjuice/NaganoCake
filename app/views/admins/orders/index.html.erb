<div class="container">
<h3>注文履歴一覧</h3>
		<table class="table">
		  <thead>
		    <tr>
		      <th scope="col">購入日時</th>
	      	<th scope="col">購入者</th>
		      <th scope="col">注文個数</th>
		      <th scope="col">注文ステータス</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @orders.each do |order| %>
		      <tr>
		        <td>
		          <%= link_to admins_order_path(order), data: {"turbolinks" => false}, :style=>"color:#528fff;"  do %>
		          	<%= order.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M:%S') %>
		          <% end %>
		        </td>
		        <td>
		          <%= order.customer.full_name %>
		        </td>
		        <td>
		          <%= order.total_count %>
		        </td>
  	        <td>
  	        	<%= order.status %>
  		      </td>
     	    </tr>
		    <% end %>
		  </tbody>
		</table>
		<div class="paginate">
  <%= paginate @orders %>
  </div>
</div>