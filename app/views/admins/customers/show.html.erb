<div class="container">
  <h3><%= @customer.last_name%><%= @customer.first_name%>さんの会員詳細</h3>
  <table class="table table-borderless user-table">
    <tbody>
      <tr>
       <td>会員ID</td>
       <td><%= @customer.id%></td>
      </tr>
      <tr>
       <td>氏名</td>
       <td><%= @customer.last_name  %> <%= @customer.first_name%></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana%></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
       <td>会員ステータス</td>
       <td><% if @customer.is_deleted == true %>
         <p>退会</p>
           <% elsif @customer.is_deleted == false %>
         <p class="text-success">有効</p>
        <% end %></td>
      </tr>
    </tbody>
  </table>
  <div class="row px-4 py-2">
      <div class="actions">
      <%= link_to "編集する", edit_admins_customer_path(@customer.id),class: "btn btn-success" %>
      </div>
      <div class="actions px-5">
      <%= link_to "注文履歴一覧を見る", admins_orders_path(id: @customer.id), class: "btn btn-primary" %>
      </div>
  </div>
</div>