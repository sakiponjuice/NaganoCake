<div class="container">
  <h3>会員一覧</h3>
  <table class="table table-sm">
      <thead>
        <tr>
         <th scope="col">会員ID</th>
         <th scope="col">氏名</th>
         <th scope="col">メールアドレス</th>
         <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
      <tr>
       <td><%= customer.id %></td>
       <td><%= link_to customer.full_name, admins_customer_path(customer.id) %></td>
       <td><%= customer.email %></td>
       <td>
       <% if customer.is_deleted == true %>
         <p>退会</p>
       <% elsif customer.is_deleted == false %>
         <p class="text-success">有効</p>
        <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="paginate">
  <%= paginate @customers %>
  </div>
</div>
